apiVersion: v1
kind: Secret
metadata:
  name: changes-secrets
  namespace: changes
type: Opaque
stringData:
  # JWT secret for token signing
  # OCI Vault: adsops-jwt-secret
  jwt-secret: "CHANGE_ME"

  # Neon database host
  # OCI Vault: adsops-neon-db-host
  db-host: "CHANGE_ME"

  # Neon database password
  # OCI Vault: adsops-neon-db-password
  db-password: "CHANGE_ME"

# IMPORTANT:
# 1. Copy this file to secrets.yaml
# 2. Replace CHANGE_ME values with actual secrets from OCI Vault:
#    - adsops-jwt-secret
#    - adsops-neon-db-host
#    - adsops-neon-db-password
# 3. Never commit secrets.yaml (it's in .gitignore)
#
# For production deployments, consider using:
# - OCI Vault integration with Kubernetes External Secrets Operator
# - kubectl create secret to create secrets from vault values
# - Sealed Secrets or similar GitOps-friendly secret management
